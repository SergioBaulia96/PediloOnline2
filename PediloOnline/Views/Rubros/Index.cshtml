      <th></th>
    </tr>
  </thead>

  <tbody id="tbody-rubro1">

  </tbody>
</table>


<div id="results"></div>

<!--Boton para agregar nuevo rubro-->
<div class="d-flex justify-content-end align-items-center bd-highlight mb-2 fixed-bottom div-boton ">
  <div class="p-2 bd-highlight d-flex "><button type="submit" class="btn btn-primary mt-3 botonRubro"
      data-bs-toggle="modal" data-bs-target="#ModalRubros"><i class="material-icons text-center">add</i></button>
  </div>
</div>

@section Scripts {
  <script src="~/js/rubros.js"></script>
}