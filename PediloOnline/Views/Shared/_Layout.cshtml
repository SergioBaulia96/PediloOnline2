<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PediloOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/rubros.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pedilonline.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
</head>

<body>
    <!-- Botón para mostrar/ocultar el menú lateral -->
    <button class="menu-toggle" id="menuToggle">☰</button>
    
    <div class="sidebar" id="sidebarMenu">
        <div class="sidebar-header">
            <h4 class="text-white text-center">PediloOnline</h4>
        </div>
        <a href="@Url.Action("Index", "Home")">Home</a>
        <a href="@Url.Action("Privacy", "Home")">Privacy</a>
        <a href="@Url.Action("Index", "Productos")">Productos</a>
        <a href="@Url.Action("Index", "Carrito")">Carrito</a>
        <a href="@Url.Action("Clientes", "Clientes")">Clientes</a>
        <a href="@Url.Action("Index", "Empresa")">Empresa</a>
        <a href="@Url.Action("Index", "Localidades")">Localidades</a>
        <a href="@Url.Action("Index", "Rubros")">Rubros</a>
        <a href="@Url.Action("Index", "Subrubros")">SubRubros</a>
        <a href="@Url.Action("Marcas", "Marcas")">Marcas</a>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-color border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/fontawesome/js/all.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
